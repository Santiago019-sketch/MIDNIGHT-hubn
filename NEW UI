-- Custom GUI for Exploit with Name, Texts, Color, and Toggle Button

local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")
local UIToggle = Instance.new("TextButton")

ScreenGui.Name = "MidnightReviveUI"
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

TextLabel.Name = "ReviveText"
TextLabel.Parent = ScreenGui
TextLabel.BackgroundTransparency = 1
TextLabel.Size = UDim2.new(0, 300, 0, 200)
TextLabel.Text = "Midnight Revive | Exploit\nUse [C] to revive\nand [V] to resurrect!"
TextLabel.TextColor3 = Color3.new(0, 0, 1)
TextLabel.TextSize = 24
TextLabel.TextWrapped = true
TextLabel.TextXAlignment = Enum.TextXAlignment.Center
TextLabel.Position = UDim2.new(0.5, -150, 0.5, -100)

UIToggle.Name = "ToggleButton"
UIToggle.Parent = ScreenGui
UIToggle.BackgroundTransparency = 0.8
UIToggle.Size = UDim2.new(0, 50, 0, 30)
UIToggle.Text = "On"
UIToggle.TextColor3 = Color3.new(1, 1, 1)
UIToggle.TextSize = 14
UIToggle.Position = UDim2.new(0.5, -25, 0.5, -50)

-- Toggle functionality (you can customize this part)
UIToggle.MouseButton1Click:Connect(function()
    if UIToggle.Text == "On" then
        UIToggle.Text = "Off"
        TextLabel.Visible = false
    else
        UIToggle.Text = "On"
        TextLabel.Visible = true
    end
end)
